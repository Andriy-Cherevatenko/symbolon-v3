{
    "name": "symbolon-v2",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@craco/craco": "^5.6.2",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.4.0",
        "@testing-library/user-event": "^7.2.1",
        "classnames": "^2.2.6",
        "craco-less": "^1.15.0",
        "cross-env": "^6.0.3",
        "immutable": "^3.8.2",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-redux": "^7.1.3",
        "react-scripts": "3.3.0",
        "redux": "^4.0.4"
    },
    "scripts": {
        "start": "cross-env npm run eslint && craco start",
        "build": "cross-env craco build",
        "test": "cross-env craco test",
        "eject": "cross-env react-scripts eject",
        "eslint": "cross-env eslint src/",
        "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|md|vue)\"",
        "precommit": "lint-staged"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "plugin:prettier/recommended"
        ]
    },
    "prettier": {
        "useTabs": false,
        "printWidth": 85,
        "arrowParens": "always",
        "semi": true,
        "tabWidth": 4,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "singleQuote": true
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "eslint": "^6.7.2",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^3.1.0",
        "lint-staged": "^9.5.0",
        "prettier": "^1.19.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.+(js|jsx)": [
            "eslint --max-warnings=0",
            "prettier --write",
            "git add"
        ],
        "*.+(json|css|md)": [
            "prettier --write",
            "git add"
        ]
    }
}
