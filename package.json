{
    "name": "symbolon-v2",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@apollo/react-hooks": "^3.1.3",
        "@craco/craco": "^5.6.2",
        "@material-ui/core": "^4.9.0",
        "@material-ui/icons": "^4.5.1",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.4.0",
        "@testing-library/user-event": "^7.2.1",
        "apollo-cache-inmemory": "^1.6.5",
        "apollo-client": "^2.6.8",
        "classnames": "^2.2.6",
        "craco-less": "^1.15.0",
        "cross-env": "^6.0.3",
        "graphql": "^14.5.8",
        "graphql-tag": "^2.10.1",
        "immutable": "^3.8.2",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-redux": "^7.1.3",
        "react-scripts": "3.3.0",
        "redux": "^4.0.4"
    },
    "scripts": {
        "start": "cross-env npm run eslint && craco start",
        "build": "cross-env craco build",
        "test": "cross-env craco test --verbose --coverage --watchAll",
        "eject": "cross-env react-scripts eject",
        "eslint": "cross-env eslint src/",
        "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|md|vue)\"",
        "precommit": "lint-staged"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.2",
        "eslint": "^6.7.2",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^3.1.0",
        "jest": "^24.9.0",
        "lint-staged": "^9.5.0",
        "prettier": "^1.19.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.+(js|jsx)": [
            "eslint --max-warnings=0",
            "prettier --write",
            "git add"
        ],
        "*.+(json|css|md)": [
            "prettier --write",
            "git add"
        ]
    },
    "jest": {
        "collectCoverageFrom": [
            "**/*.{js,jsx}",
            "!**/node_modules/**",
            "!**/coverage/**",
            "!**/serviceWorker.js",
            "!**/index.js",
            "!**/components/Articles/**"
        ],
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "clover"
        ]
    }
}
